{
	"compilerOptions": {
		"outDir": "dist",
		"target": "esnext",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"strict": true,
		"skipLibCheck": true,
		"rootDirs": ["./src", "./api"]
	},
	"include": [
		"api/**/*.ts",
		"public/**/*.html",
		"./*.js",
		"src/**/*.ts",
		"test/**/*.ts"
	]
}
